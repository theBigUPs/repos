
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>


<table>

    <thead>

        <tr>
        <th>id</th>
        <th>name</th>
        <th>price</th>
        <th>stock</th>
        <th>operation</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><a asp-controller="products" asp-action="remove" asp-route-id="@item.Id" > delete</a></td>

        </tr>
    }


</table>

